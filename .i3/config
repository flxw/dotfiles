bindcode Mod1+13 workspace 4:code
bindcode Mod1+14 workspace 5:stuff
bindcode Mod1+15 workspace 6:eclps
bindcode Mod1+16 workspace 7
bindcode Mod1+17 workspace 8
bindcode Mod1+18 workspace 9:mail
bindcode Mod1+19 workspace 10:vid

# Move to Workspaces
bindcode Mod1+Shift+10 move workspace 1:term
bindcode Mod1+Shift+11 move workspace 2:www
bindcode Mod1+Shift+12 move workspace 3:lect
bindcode Mod1+Shift+13 move workspace 4:code
bindcode Mod1+Shift+14 move workspace 5:stuff
bindcode Mod1+Shift+15 move workspace 6:eclps
bindcode Mod1+Shift+16 move workspace 7
bindcode Mod1+Shift+17 move workspace 8
bindcode Mod1+Shift+18 move workspace 9:mail
bindcode Mod1+Shift+19 move workspace 10:vid

#################################################
#### MONITOR SETTINGS ##########################
workspace "1:term" output LVDS1
workspace "1:term" output VGA1
workspace "2:www"  output HDMI3
#workspace "2: www"  output VGA1
workspace "3:lect" output VGA1
workspace "4:code" output LVDS1
workspace "5:stuff" output HDMI3
workspace "9:mail" output  VGA1
workspace "10:vid" output LVDS1

#################################################
#### WORKSPACE ASSIGNMENTS ######################
#### get class with 'xprop' command #############
assign [class="Chromium"]  	   2:www
assign [class="Folienizer"]    3:lect
assign [class="Qt Creator"]	   4:code
assign [class="XTerm"]   	   5:stuff
assign [class="Xpdf"]      	   5:stuff
assign [class="Claws-mail"]    9:mail
assign [class="Vlc"]      	   10:vid

#################################################
#### PROGRAM SHORTCUTS ###########################
# change loudness using laptop keys
bindcode 123 exec amixer -c 0 set Master 2dB+
bindcode 122 exec amixer -c 0 set Master 2dB-
bindcode 121 exec amixer set Master toggle
bindcode 199 exec synclient TouchpadOff=`synclient -l | grep -ce TouchpadOff.\*0`

# Mod1+Enter starts a new terminal
bindcode Mod1+36 exec /usr/bin/termite

# Various shortcuts
bindsym Mod4+1      exec  /usr/bin/subl3
bindsym Mod4+F1     exec  /usr/bin/chromium
bindsym Mod4+F2     exec  /home/felix/code/folienizer/cppimpl/build-folienizer-Desktop-Release/folienizer
bindsym Mod4+F3     exec  /usr/bin/claws-mail
bindsym Mod4+F4     exec  /usr/bin/qtcreator
bindsym Mod4+F5     exec  /usr/bin/gnumeric
bindsym Mod4+F6     exec  /usr/bin/vlc

# launch personal hacks
bindsym  Mod4+F12    exec ~/bin/setrandombg.sh
bindsym  XF86Launch1 exec ~/bin/connect-vga.sh
bindcode 107         exec ~/bin/take-screenshot.sh

##################################################
#### STARTUP CONFIGURATION #######################
exec /usr/bin/redshift -l 52.4:13.07 -t 5500:4200
exec /usr/bin/nm-applet --sm-disable
exec /usr/bin/dropboxd
exec /usr/bin/dunst -config ~/.i3/dunstrc
exec i3-msg 'workspace 1:term'

##################################################
#### LOOKS CONFIGURATION #########################
# color defines for zenburn styled i3
set $bg     #2c2c2e
set $fg     #9f9f9f
set $hi     #efef8f
set $ac     #a0afa0
set $tx     #040404
set $ia     #8f8f8f
set $be     #8faf9f
set $yw     #ccdc90
set $gn     #88b090
set $rd     #e89393

# set some nice colors      border     background  text
client.focused              $ac        $ac         $tx
client.unfocused            $bg        $bg         $ia
client.focused_inactive     $bg        $bg         $ac
client.urgent               $rd        $rd         $tx

bar {
    position top

    status_command i3status --config ~/.i3/i3status.conf

    colors {
        background          $bg
        statusline          $fg
        separator           $hi
        active_workspace    $gn        $bg        $ac
        focused_workspace   $gn        $ac        $tx
        inactive_workspace  $bg        $bg        $ia
        urgent_workspace    $rd        $bg        $ac
    }
}
